@model Category

<form method="post">
    <input asp-for="Id" hidden /> @*//ako se id zove drugacije od Id npr da je  categoryid onda treba oavj input*@
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="form-label mt-4"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-secondary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary border  form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>

@section Script {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

