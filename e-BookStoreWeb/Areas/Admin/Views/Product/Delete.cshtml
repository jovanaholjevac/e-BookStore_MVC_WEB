@model Product

<form method="post">
    <input asp-for="Id" hidden /> @*//ako se id zove drugacije od Id npr da je  Productid onda treba oavj input*@
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="form-label mt-4"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" class="form-label mt-4"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN" class="form-label mt-4"></label>
            <input asp-for="ISBN" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Author" class="form-label mt-4"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Price" class="form-label mt-4"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary border  form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>
